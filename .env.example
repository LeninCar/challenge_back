# Puerto del servidor
PORT=3000

# Configuración de PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_USER=mi_usuario
PG_PASSWORD=mi_contraseña_segura
PG_DATABASE=mi_base_de_datos

# URL completa de la base de datos (opcional, si tu ORM la necesita)
DATABASE_URL="postgresql://mi_usuario:mi_contraseña_segura@localhost:5432/mi_base_de_datos"

# Entorno de ejecución
NODE_ENV=development

# Configuración de correo electrónico
EMAIL_USER=mi_correo@ejemplo.com
GMAIL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx
GMAIL_REFRESH_TOKEN=1//xxxxxxxxxxxxxxxxxxxx
GMAIL_USER=mi_correo@ejemplo.com

# URL del frontend
FRONTEND_URL=http://localhost:5173

# OAuth de Google (por ejemplo, para login)
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com

# Clave secreta para JWT
JWT_SECRET=mi_clave_secreta_super_segura
